---
import { Image } from "astro:assets";
const { src, href } = Astro.props;
---

<div class="relative group overflow-hidden w-full">
  <a href={href}>
    <Image src={src} alt="img1" class="size-full object-cover" />
    <div
      class="absolute top-0 -left-full size-full p-4 transition-all duration-500 group-hover:left-0 text-white"
    >
      <div
        class="size-full p-4 flex flex-col justify-end bg-black bg-opacity-60"
      >
        <slot />
      </div>
    </div>
  </a>
</div>
